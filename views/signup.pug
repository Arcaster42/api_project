doctype html
html
    head
        style
            include ../style/style.css
        script(src="../scripts/signup.js")
    body
        h1 Final Fantasy 14 API
        br
        h2 Signup
        br
        form.login(action="/signup" method="post" enctype="multipart/form-data")
            label(for="username") Username
            br
            input(type="text" name="username" required)
            br
            label(for="email") Email
            br
            input(type="email" name="email" required)
            br
            label(for="password") Password
            br
            input#p1(type="password" name="password" onkeyup="checkPass()")
            br
            label#lbl(for="password_v") Password
            br
            input#p2(type="password" name="password_v" onkeyup="checkPass()")
            br
            input.btn(type="submit" value="Signup" onclick="return isValid()")
            br