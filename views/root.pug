doctype html
html
    head
        style
            include ../style/style.css
    body
        h1 Final Fantasy 14 API
        br
        form.login(action="/login" method="post" enctype="multipart/form-data")
            label(for="username") Username
            br
            input(type="text")
            br
            label(for="password") Password
            br
            input(type="password")
            br
            input.btn(type="submit" value="Login")
            br
            a(href="/signup") Create Account